<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Directory</title>
    <link rel="stylesheet" href="hospitalstyle.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
        }
        header {
            background-color: #c0392b;
            color: white;
            padding: 20px;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .search-container {
            text-align: center;
            margin: 20px 0;
        }
        .search-input {
            width: 80%;
            padding: 10px;
            border: 1px solid #c0392b;
            border-radius: 5px;
            font-size: 16px;
        }
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: calc(100% - 80px);
            overflow-y: auto;
            padding: 10px;
        }
        .hospital-list {
            list-style-type: none;
            padding: 0;
            width: 100%;
            max-width: 800px;
        }
        .hospital-item {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin: 15px 0;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }
        .hospital-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            background-color: #ffe6e6;
        }
        .hospital-info {
            flex: 1;
        }
        .hospital-info h2 {
            margin: 10px 0;
            font-size: 1.5em;
            font-weight: bold;
            color: #c0392b;
        }
        .hospital-info p {
            margin: 5px 0;
            color: #555;
        }
        .hospital-actions {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }
        .price {
            font-size: 1.2em;
            color: #e74c3c;
            font-weight: bold;
        }
        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            cursor: pointer;
            width: 100%;
            margin-top: 5px;
            transition: background-color 0.2s;
        }
        .btn.primary {
            background-color: #c0392b;
        }
        .btn.primary:hover {
            background-color: #a93226;
        }
        .btn.secondary {
            background-color: #e74c3c;
        }
        .btn.secondary:hover {
            background-color: #c0392b;
        }
        footer {
            text-align: center;
            padding: 10px;
            background-color: #343a40;
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <header>
        <h1>Hospital Directory</h1>
    </header>

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search hospitals..." class="search-input" oninput="filterHospitals()">
    </div>

    <main>
        <ul id="hospitalList" class="hospital-list">
            <% if (hospitals.length > 0) { %>
                <% hospitals.forEach(hospital => { 
                    const price = Math.floor(Math.random() * (4000 - 3000 + 1)) + 3000;
                %>
                    <li class="hospital-item">
                        <div class="hospital-info">
                            <h2><%= hospital.hospital_name %></h2>
                            <p>Location: <%= hospital.hospital_name %>, <%= hospital.hospital_address %></p>
                            <p>Available Organs: <%= hospital.organs %></p>
                        </div>
                        <div class="hospital-actions">
                            <!-- <p class="price">â‚¹<%= price %></p> -->
                            
                            <a href="/map?end=<%= encodeURIComponent(hospital.hospital_address) %>" class="btn secondary">Map Location</a>
                            <form action="/sendEmail" method="POST">
                                <form action="/sendEmail" method="POST"> <!-- Form for sending email -->
                                    <input type="hidden" name="hospital_name" value="<%= hospital.hospital_name %>">
                                    <input type="hidden" name="hospital_address" value="<%= hospital.hospital_address %>">
                                  
                                </form>
                                <!-- Button to trigger the form submission -->
                                
                            </form>
                                                    </div>
                    </li>
                <% }) %>
            <% } else { %>
                <p>No hospitals found.</p>
            <% } %>
        </ul>
    </main>

    <footer>
        <p>&copy; 2024 Hospital Directory. All rights reserved.</p>
    </footer>

    <script>
        // Function to filter hospitals based on search input
        function filterHospitals() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const hospitalItems = document.querySelectorAll('.hospital-item');

            hospitalItems.forEach(item => {
                const hospitalName = item.querySelector('.hospital-info h2').textContent.toLowerCase();

                if (hospitalName.includes(searchInput)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>

</body>
</html>
